<div class="card mb-4">
{% if property.filename %}
  <a href="{{ path('property.show', {slug: property.slug, id:property.id}) }}"><img src=" {{ vich_uploader_asset( property, 'imageFile') | imagine_filter('thumb') }}" alt="" style="width: 100%; height: auto"></a>

  {% else %}
     <a href="{{ path('property.show', {slug: property.slug, id:property.id}) }}"><img src=" {{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" alt="" style="width: 100%; height: auto"></a>
{% endif %}
    <div class="card-body">
      <h5 class="card-title">
        <a href="{{ path('property.show', {slug: property.slug, id:property.id}) }} ">
            {{ property.title }}
        </a>
      </h5>
      <p class="card-text">{{ property.surface }} m² - {{ property.rooms}} Pièces - {{ property.city }} ({{ property.postalCode }})</p>
      <div class="text-primary" style="font-size:2rem;font-weight: bold;">
        {{ property.formattedPrice }}
      </div>
    </div>
</div>


